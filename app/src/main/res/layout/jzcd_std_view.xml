<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="120.0dip"
    android:layout_height="wrap_content"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.liu.himusic.ui.widget.VideoPlayerItem
        android:id="@+id/jz_video"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        tools:ignore="MissingConstraints" />
    <com.liu.himusic.ui.widget.IconTag
        android:id="@+id/play_video_tag"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@+id/jz_video"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/video_title"
        android:layout_width="120dip"
        app:layout_constraintTop_toBottomOf="@+id/jz_video"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="计蒙不吃鱼xxxxxxxxxxxxxxxx"
        android:maxLines="2"
        android:layout_marginTop="@dimen/dp_5"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="12.0dip"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>