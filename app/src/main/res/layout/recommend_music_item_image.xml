<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="110.0dip"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_5"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.liucj.lib_common.view.MellowImageView
        android:id="@+id/iv_image"
        android:layout_width="110.0dip"
        android:layout_height="110.0dip"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_5"
        android:scaleType="centerCrop"
        tools:src="@drawable/icon_logo"
        tools:ignore="MissingConstraints" />
    <com.liu.himusic.ui.widget.IconTag
        android:id="@+id/play_tag"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@+id/iv_image"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/title"
        android:layout_width="110dip"
        app:layout_constraintTop_toBottomOf="@+id/iv_image"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        tools:text="计蒙不吃鱼xxxxxxxxxxxxxxxx"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="12.0dip"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>