<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:banner="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_three_song"
        android:layout_width="40dp"
        tools:src="@drawable/icon_logo"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_5"
        android:layout_height="40dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_three_song_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/dp_16"
                android:textColor="@color/black"
                app:layout_constraintLeft_toRightOf="@+id/iv_three_song"
                tools:ignore="MissingConstraints"
                tools:text="第一次爱的人" />

            <TextView
                android:id="@+id/tv_three_song_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@+id/tv_three_song_title"
                tools:ignore="MissingConstraints"
                tools:text="- 王心凌" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_three_song_desc"
            android:layout_marginTop="2dp"
            android:textColor="@color/color_656"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="尖锐的矛盾感" />
    </LinearLayout>
    <ImageView
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/dp_20"
        tools:src="@drawable/icon_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>